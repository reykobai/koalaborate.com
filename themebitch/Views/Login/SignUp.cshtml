@{
    ViewBag.Title = "Index";
}
@if (TempData["success"] != null)
{
    <center>
        <p id="success" style=" text-align: center;
            font-family: Ruda,sans-serif;
            font-weight: bold;
            color: green;
            margin-top: 15px;
            margin-bottom: 15px;">
            You can now sign in!
        </p>
    </center>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    {


        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-4 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Register</div>

                </div>

                <div style="padding-top:30px" class="panel-body">

                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                    <form id="loginform" class="form-horizontal" role="form">


                        @*Username*@
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input id="login-username" type="text" class="form-control" name="username" placeholder="Username">
                        </div>
                        <br />
                        @*Email*@
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                            <input id="login-email" type="email" class="form-control" name="email" placeholder="Email Address">
                        </div>
                        <br />
                        @*Password*@
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input pattern=".{6,}" type="password" name="pass" class="form-control" placeholder="Password must be at least 6 characters" required />
                        </div>
                        <br />
                        @*Password*@
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input id="login-verifypass" type="password" class="form-control" name="verifypass" placeholder="Verify Password">
                        </div>
               
                        <hr />
                        <p id="personalInfo" style="color: #3a87ad; ">Personal Information</p>
                        @*Firstname & Lastname*@
                        <div class="input-group">
                        
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input id="login-fname" type="text" class="form-control" name="fname" value="" placeholder="First Name" required/>
                            <input id="login-lname" type="text" class="form-control" name="lname" value="" placeholder="Last Name" required/>
                        </div>
                        <br />
                        @*Contact Number*@
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-phone-alt"></i></span>
                            <input id="login-contact" type="number" class="form-control" name="contact" placeholder="Contact Number" min="00000000000">
                        </div>

                        <br />


                     

                        @*Field/Specialty*@
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-briefcase"></i></span>
                            <input id="login-specialty" type="text" class="form-control" name="specialty" placeholder="Field/ Specialty">
                        </div>
                        <br />

                      
                        <div style="margin-bottom: 25px" class="input-group">
                            <button id="btn-login" type="submit" class="btn btn-primary">Register  </button>
                        </div>





                        <div class="form-group">
                            <div class="col-md-12 control">
                                <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                    Already a member!
                                    @Html.ActionLink("Log in now!", "Index", "Login")

                                </div>
                            </div>
                        </div>
                    </form>



                </div>
            </div>
        </div>
    }
}
